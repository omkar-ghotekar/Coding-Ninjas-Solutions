    int power(int x, unsigned int y) 
{ 
    if (y == 0) 
        return 1; 
    else if (y % 2 == 0) 
        return power(x, y / 2) * power(x, y / 2); 
    else
        return x * power(x, y / 2) * power(x, y / 2); 
} 
 
  
/* Driver code */
int main() 
{ 
     
    int x;
    cin>>x;
    cout<<" ";
    unsigned int y ;
    cin>>y;
  
    cout << power(x, y); 
    return 0; 
} 

