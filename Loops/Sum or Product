//Write a program that asks the user for a number N and a choice C.
//And then give them the possibility to choose between computing the sum and computing the product of 
//all integers in the range 1 to N (both inclusive).





import java.util.*;
public class Main {
	
	public static void main(String[] args) {
		// Write your code here
			Scanner sc=new Scanner(System.in);
        	int n=sc.nextInt();
        	int c=sc.nextInt();
        	int sum=0;
        	int product=0;
        	int my=-1;
        if(c>=1 && c<=12)
        {
        	switch(c)
            {
                case 1: 
                    	for(int i=1;i<=n;i++)
                        {
                      		sum=sum+i;      
                        }
                    System.out.println(sum);
                    break;
                
                case 2:
                    
                    for(int i=1;i<=n;i++)
                    {
                        product=product*i;
                    }
                   System.out.println(product);
                    break;
                    
                default:
                    System.out.println("-1");
                    break;
                    
            }
        }
        
	}
}
